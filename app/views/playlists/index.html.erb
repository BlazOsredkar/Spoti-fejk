<div class="container mt-5">
  <p style="color: green;"><%= notice %></p>

  <h1 class="mb-4">Playlists</h1>

  <div id="playlists">
    <% @playlists.each do |playlist| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="mt-3"><%= playlist.name %></h5>
          <p class="card-text text-right"> <!-- Align the link to the right -->
            <%= link_to "Show this playlist", playlist, class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New playlist", new_playlist_path, class: "btn btn-success" %>
</div>
